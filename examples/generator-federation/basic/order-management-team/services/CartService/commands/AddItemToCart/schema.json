{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["cartId", "productId", "quantity"],
  "properties": {
    "cartId": {
      "type": "string",
      "description": "Unique identifier for the cart"
    },
    "productId": {
      "type": "string",
      "description": "Unique identifier for the product to be added"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of items to add to cart"
    }
  },
  "additionalProperties": false
}
