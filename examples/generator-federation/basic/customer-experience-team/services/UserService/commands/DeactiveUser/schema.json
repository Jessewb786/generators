{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DeactivateUser",
  "description": "Schema for deactivating a user",
  "required": ["userId"],
  "properties": {
    "userId": {
      "type": "string",
      "description": "The unique identifier of the user to deactivate",
      "minLength": 1
    },
    "reason": {
      "type": "string",
      "description": "Optional reason for deactivating the user",
      "minLength": 1,
      "maxLength": 500
    }
  },
  "additionalProperties": false
}
